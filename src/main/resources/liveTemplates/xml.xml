<templateSet group="HiToolsXmlTemplate">
    <template name="recycle"
        description="RecycleView Template"
        toReformat="true" toShortenFQNames="true"
              value="&lt;androidx.recyclerview.widget.RecyclerView&#10;
    android:id=&quot;@+id/list&quot;&#10;
    android:layout_width=&quot;match_parent&quot;&#10;
    android:layout_height=&quot;match_parent&quot;&#10;
    app:layoutManager=&quot;$INDEX$&quot;/&gt;">
        <variable name="INDEX" alwaysStopAt="true" defaultValue="Layout" expression="" />
        <context>
            <option name="Android" value="true" />
        </context>
    </template>

    <template name="topbar"
              description="TopBar Template"
              toReformat="true" toShortenFQNames="true"
              value="&lt;dev.hitools.common.widget.TopBar&#10;
    android:id=&quot;@+id/topBar&quot;&#10;
    android:layout_width=&quot;match_parent&quot;&#10;
    android:layout_height=&quot;wrap_content&quot;&#10;
    app:text=&quot;$INDEX$&quot; /&gt;">
        <variable name="INDEX" alwaysStopAt="true" defaultValue="Layout" expression="" />
        <context>
            <option name="Android" value="true" />
        </context>
    </template>

    <template name="hcp"
              description="ConstraintLayout Horizontal Center"
              toReformat="true" toShortenFQNames="true"
              value="app:layout_constraintStart_toStartOf=&quot;parent&quot;
&#10;app:layout_constraintEnd_toEndOf=&quot;parent&quot;">
        <context>
            <option name="Android" value="true" />
        </context>
    </template>

    <template name="vcp"
              description="ConstraintLayout Vertical Center"
              toReformat="true" toShortenFQNames="true"
              value="app:layout_constraintTop_toTopOf=&quot;parent&quot;&#10;
app:layout_constraintBottom_toBottomOf=&quot;parent&quot;">
        <context>
            <option name="Android" value="true" />
        </context>
    </template>

    <template name="cp"
              description="ConstraintLayout Center In Parent"
              toReformat="true" toShortenFQNames="true"
              value="app:layout_constraintStart_toStartOf=&quot;parent&quot;&#10;
app:layout_constraintEnd_toEndOf=&quot;parent&quot;&#10;
app:layout_constraintTop_toTopOf=&quot;parent&quot;&#10;
app:layout_constraintBottom_toBottomOf=&quot;parent&quot;">
        <context>
            <option name="Android" value="true" />
        </context>
    </template>

    <template name="startChain"
              description="ConstraintLayout horizontal chain"
              toReformat="true" toShortenFQNames="true"
              value="app:layout_constraintStart_toEndOf=&quot;@id/$LEFT$&quot;
&#10;app:layout_constraintEnd_toStartOf=&quot;@id/$RIGHT$&quot;">
        <variable name="LEFT" alwaysStopAt="true" defaultValue="Layout" expression="" />
        <variable name="RIGHT" alwaysStopAt="true" defaultValue="Layout" expression="" />
        <context>
            <option name="Android" value="true" />
        </context>
    </template>

    <template name="startChainP"
              description="ConstraintLayout horizontal chain"
              toReformat="true" toShortenFQNames="true"
              value="app:layout_constraintStart_toStartOf=&quot;parent&quot;
&#10;app:layout_constraintEnd_toStartOf=&quot;@id/$RIGHT$&quot;">
        <variable name="RIGHT" alwaysStopAt="true" defaultValue="Layout" expression="" />
        <context>
            <option name="Android" value="true" />
        </context>
    </template>

    <template name="endChainP"
              description="ConstraintLayout horizontal chain"
              toReformat="true" toShortenFQNames="true"
              value="app:layout_constraintStart_toEndOf=&quot;@id/$LEFT$&quot;
&#10;app:layout_constraintEnd_toEndOf=&quot;parent&quot;">
        <variable name="LEFT" alwaysStopAt="true" defaultValue="Layout" expression="" />
        <context>
            <option name="Android" value="true" />
        </context>
    </template>

    <template name="topChain"
              description="ConstraintLayout horizontal chain"
              toReformat="true" toShortenFQNames="true"
              value="app:layout_constraintTop_toBottomOf=&quot;@id/$LEFT$&quot;
&#10;app:layout_constraintBottom_toTopOf=&quot;@id/$RIGHT$&quot;">
        <variable name="LEFT" alwaysStopAt="true" defaultValue="Layout" expression="" />
        <variable name="RIGHT" alwaysStopAt="true" defaultValue="Layout" expression="" />
        <context>
            <option name="Android" value="true" />
        </context>
    </template>

    <template name="topChainP"
              description="ConstraintLayout horizontal chain"
              toReformat="true" toShortenFQNames="true"
              value="app:layout_constraintTop_toTopOf=&quot;parent&quot;
&#10;app:layout_constraintBottom_toTopOf=&quot;@id/$RIGHT$&quot;">
        <variable name="RIGHT" alwaysStopAt="true" defaultValue="Layout" expression="" />
        <context>
            <option name="Android" value="true" />
        </context>
    </template>

    <template name="bottomChainP"
              description="ConstraintLayout horizontal chain"
              toReformat="true" toShortenFQNames="true"
              value="app:layout_constraintTop_toBottomOf=&quot;@id/$LEFT$&quot;
&#10;app:layout_constraintBottom_toBottomOf=&quot;parent&quot;">
        <variable name="LEFT" alwaysStopAt="true" defaultValue="Layout" expression="" />
        <context>
            <option name="Android" value="true" />
        </context>
